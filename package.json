{
  "name": "@islavi/ng2-component-lab",
  "version": "1.0.28",
  "description": "Build Angular 2 components in a controlled, isolated environment. This is fork from <a href='https://github.com/synapse-wireless-labs/component-lab.git'>https://github.com/synapse-wireless-labs/component-lab.git</a> which use angular 2 and fix some bugs.",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/islavi/ng2-component-lab.git",
    "type": "git"
  },
  "authors": [
    "Mike Ryan",
    "David Pierce",
    "Magdalena Beverly",
    "Mia Chung",
    "Matt Hales",
    "Joe Davis",
    "Lavi Israel"
  ],
  "license": "MIT",
  "bin": {
    "ng2-component-lab": "./src/cli.js"
  },
  "scripts": {
    "copy": "cpy package.json README.md index.html release",
    "clean": "rimraf release",
    "build:js": "tsc -p tsconfig.dist.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:uglify": "uglifyjs -c --screw-ie8 --comments -o ./release/bundles/ng2-component-lab.min.umd.js ./release/bundles/ng2-component-lab.umd.js",
    "prebuild": "yarn run clean",
    "build": "yarn run build:js && yarn run build:umd && yarn run build:uglify && yarn build:cli",
    "postbuild": "yarn run copy"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "html-webpack-plugin": "^2.22.0",
    "ie-shim": "^0.1.0",
    "interpret": "^1.0.1",
    "liftoff": "^2.3.0",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "reflect-metadata": "^0.1.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "zone.js": "~0.6.26"
  },
  "devDependencies": {
    "@angular/compiler": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "~5.0.0",
    "@types/chalk": "^0.4.30",
    "@types/lodash": "^4.14.37",
    "@types/node": "^6.0.45",
    "browserify-css": "^0.14.0",
    "cpy-cli": "^1.0.1",
    "prismjs": "^1.8.4",
    "rimraf": "^2.5.4",
    "rollup": "^0.58.2",
    "rxjs": "^5.5.2",
    "typescript": "^2.0.3",
    "uglifyjs": "^2.4.10",
    "zone.js": "^0.6.25"
  }
}
